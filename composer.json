{
  "name": "zrnik/phpunit-exceptions",
  "description": "Trait for easier exception testing in PHPUnit.",
  "version": "v0.0.1",
  "license": "MIT",
  "authors": [
    {
      "name": "Štěpán Zrník",
      "email": "stepan.zrnik@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Zrnik\\PHPUnit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4|>=8.0",
    "phpunit/phpunit": "^9"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12"
  },
  "scripts": {
    "phpunit": "phpunit tests",
    "phpstan": "phpstan analyse src tests -l max"
  }
}
